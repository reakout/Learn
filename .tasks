# vim: set fenc=utf-8 ft=dosini:
# see: https://github.com/skywind3000/asynctasks.vim/wiki/Task-Config

# define a new task named "file-build"
[file-build]
command:c,cpp=clang++-15 -O3 -Wall "$(VIM_FILEPATH)" -o "$(VIM_PATHNOEXT).o" -std=c++2a
command:go=go build -o "$(VIM_PATHNOEXT)" "$(VIM_FILEPATH).o"
command:rust=rustc "$(VIM_FILEPATH)" -o "$(VIM_PATHNOEXT).o"
command:make=make -f "$(VIM_FILEPATH)"
output=quickfix
cwd=$(VIM_FILEDIR)
save=2

[file-run]
command="$(VIM_FILEPATH)"
command:c,cpp="$(VIM_PATHNOEXT).o"
command:rust="$(VIM_PATHNOEXT).o"
command:go="$(VIM_PATHNOEXT).o"
command:python=python "$(VIM_FILENAME)"
command:javascript=node "$(VIM_FILENAME)"
command:sh=sh "$(VIM_FILENAME)"
command:lua=lua "$(VIM_FILENAME)"
command:perl=perl "$(VIM_FILENAME)"
command:ruby=ruby "$(VIM_FILENAME)"
output=quickfix
cwd=$(VIM_FILEDIR)
